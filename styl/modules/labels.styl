.label
	background-color background-light-grey
	color text-lighter-grey
	padding 0.6rem 1rem
	display inline-block
	border-radius border-radius-normal
	font-weight 500
	&.circular
		padding .6rem .4rem
	.detail
		background-color rgba(0, 0, 0, .1)
		padding 0.55rem 0.72rem
		height 100%
		margin -0.55rem -1rem -0.55rem 1rem
		border-radius inherit
		display inline-block
		font-weight 500
		vertical-align top
		float right
	i
		margin-right 0.6rem
		relative top 1px
	a
		color link-light
		margin-left 2rem
		font-weight 600
		&:hover
			color link-light-hover
	for bc in ('red' 'orange' 'yellow' 'green' 'teal' 'blue' 'violet' 'purple' 'pink' 'brown' 'grey' 'black' 'primary')
		&.{bc}
			color primary-white
