ul.list, ol.list
	padding 0
	margin 0
	list-style none

.list
	font-size font-size-standard
	li, .item
		padding 0.25rem 0
		position relative
		line-height 1.2rem
		display list-item
		table-layout fixed
		&:after
			display block
			content ''
			height 0
			clear both
		a.header
			display block
		.header
			font-weight 600
			line-height 1.15rem
		.icon
			&.large
				font-size 1.6rem
				line-height 1.4rem
			display inline-block
			vertical-align middle !important
			margin-right 12px
		.content
			display inline-block
			vertical-align top
	&.spaced
		li, .item
			padding 0.4rem 0
	&.very-spaced
		li, .item
			padding 0.8rem 0
	&.links
		> .item
			opacity .52
			transition opacity 0.14s ease
			a
				color text-grey
			&:hover
				opacity 1
			&.active
				opacity 1
	&.divided
		li:first-child, .item:first-child
			border none
		li, .item
			border-top 1px solid border-light-red-grey

	&.horizontal
		li
			display inline-block
			& + li
				margin-left 1.4rem
	&.ordered
		counter-reset item
		.list
			counter-reset item
			padding .55rem 0 .05rem .5rem
		li, .item
			list-style none
			&:before
				counter-incrrement item
				content counters(item,".") " "
				margin-right 5px
				opacity 0.6
	&.bulleted
		padding-left 1rem
		.item
			&:before
				content 'â€¢'
				absolute left auto top .2rem
				margin-left -0.97rem

ol.ordered
	li[value]:before
		content attr(value)
