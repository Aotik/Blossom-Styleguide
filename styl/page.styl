@import 'jeet'
@import 'nib'
@import 'rupture'
@import 'src/variables'

#app
	width 100%
	min-height 100%
	height 100%
	& > div
		width 100%
		height 100%

.circular
	border-radius 50%
	width 2.2em
	height 2.2em
	line-height 1em
	text-align center

.squared
	border-radius 0 !important
	text-align center

.main-content, .module .footer pre
	background-color #f9fbfc !important

.main-content
	&:before
		width 100%
		fixed top left
		content ''
		background linear-gradient(top right, color-blue, light-color-blue)
		z-index 4000
		height 2px
	padding-top 60px
	position relative
	min-height 100%
	width 100%
	.page
		font-size 1em
		padding 50px 0 110px 0
		margin 0 15px
		cf()

.hero
	text-align center
	padding 4.4em 0 7em 0
	relative top left
	min-height 100%
	height 100%
	width 100%
	background-color #fff
	h1
		margin .5rem 0 -.5rem 0
		font-weight 800
		font-size 4.2rem
	h3
		font-weight 300
		color color-light-grey
		max-width 73%
		display block
		margin .4rem auto
.button-group
	margin-top 1.6em
	i
		line-height 3rem
	.button + .button
		margin-left .8em

.icons
	background url('../public/examples/icons.jpg') repeat
	background-size cover
	cf()
	height 482px
	animation bgscroll 170s linear infinite
	&overlay
		height 100%
		width 100%
		content ''
		background-color rgba(0,0,0,.7)
		position relative
		.centered
			text-align center
			color #fff
		.fa-large
			font-size 3em
			color #fff
			margin 0 0 .6em 0
		h5
			font-weight 300
			margin .8em 0
			line-height 1.4em
			opacity .8
			font-size 1.2em
			a
				color #fff
				position relative
				display inline-block
				&:after
					content ''
					border-bottom 1px dashed #fff
					display block
				&:hover
					&:after
						border-bottom 1px solid #fff
					cursor pointer
		.button.outlined
			margin .6em 0 0 0
			font-size 1.2em

section.about, section.size
	cf()
	padding 5em 0
	position relative
	overflow hidden
	h3
		font-weight 600
		margin 0 0 0.6em 0
	p
		color color-light-grey
		font-size 1rem
		line-height 1.7em

.features
	cf()
	background-color #fff
	.row
		display flex
		position relative
		flex-direction row
		flex-wrap wrap
		align-items stretch

.size
	.puzzles
		absolute right -7em
		animation puzzlebounce 4.2s infinite linear
		img
			height 44em
			user-select none
			pointer-events none
		&-left
			absolute left -32em
			animation puzzlebounce 3s infinite linear
			img
				height 53em
				margin-top 52em
				user-select none
				pointer-events none
.grid
	cf()
	padding 4em 0
	background-color background-lightest-grey

.column
	display flex
	flex-direction column
	text-align center
	margin 4.4em 0
	padding 0 2em
	& + .column
		border-left 1px solid border-grey
	h4
		font-weight 400
		margin 0 0 .6em 0
	p
		flex 1 0 auto
		margin 0 0 1.4em 0
		color color-light-grey
	.fa
		font-size 2.2em
		margin 0 0 .6em 0
	.button
		flex-grow 0

@keyframes bgscroll
	100%
		background-position 0 -5384px

.block-grey
	width 100%
	height 3em
	background-color color-smoke
	border-radius 4px
	display block

.show-grid > *
	padding-top 15px

.show-tables > .table
	margin 20px 0

.show-input > .input
	margin 10px 0

.show-cards
	margin 12px 0
	& > .card:not(.fluid)
		margin-right 20px

.show-lists > .list
	margin 20px 0 0 0

.show-progress > .progress
	margin 6px 0

.y-block
	background-color #FFC82C
	width 100px
	height 100px
	border-radius 3px
	display block
	content ''

.opening-message
	margin-top -1.9em

.message + .module.collapsed
	margin-top 1em

.installing
	margin-top 4em
	padding-bottom 2rem
	.explanation
		margin-top .3em
	.module
		margin 1.4em 0
		padding 1.3em 1.3em 1.6em 1.3em
	.contain + .contain
		margin-top 4em

.explanation
	margin-bottom 1em
	position relative
	.view-source
		color text-grey
		cursor pointer
		font-size 1.1em
		absolute top right
		opacity .4
		&:hover
			color color-primary
			opacity 1
	small
		display block
		color text-grey
	h6
		font-size 1.2rem
		font-weight 600
	p
		color color-light-grey
		margin .1rem 0 0 0
		display block
		& + p
			margin .4em 0 0 0


.module
	.antiScroll
		&:first-child
			margin-top -1.6em
		&:last-child
			margin-bottom -1.6em
		padding 1em 0
		small
			color text-lightest-grey
			display block
			margin .8em 0 0 0
			font-weight 300
		& + .antiScroll
			border-top 1px solid border-grey
.example
	padding 1rem 0
	&:hover
		.view-source
			display block !important
	& + .example
		margin-top 1rem
	.row
		> *
			margin-top 6px
			margin-bottom 6px
		& ~ small
			margin-top 4rem
			display block
	&.menus
		.note
			margin 2em 0 0 0
			color color-light-grey
		.note + .menu
			margin 2em 0 0 0
	&.types
		.progress + .progress
			margin-top 14px
	&.dropdowns
		overflow visible
		.stack + .stack
			margin-top 14px
	.message
		margin 0
	&.sizes
		.button + .button
			margin-left 1em
	&.animations
		.group
			border 1px solid border-grey
			span(1/1)
			border-radius border-radius-normal
	.animation
		display inline-block
		padding 1.4em 1.4em 4.2em 1.4em
		position relative
		overflow hidden
		span(1/3)
		& + .animation
			border-left 1px solid border-grey
		&:nth-child(4n)
			border-left 0
			border-top 1px solid border-grey
		&:nth-child(5n)
			border-top 1px solid border-grey
		&:nth-child(6n)
			border-top 1px solid border-grey
		code
			absolute bottom left
			width 100%
			display block
			padding .7em 0
			text-align center
			margin 0
			color color-light-grey
			background-color light-color-smoke
			font-size .875em
			border-radius 0
	.circle
		border-radius 50%
		height 4em
		width 4em
		background-color color-violet
		content ''
		display block
		margin 0 auto
		&:hover
			transform scale(1.2)
	.square
		border-radius 5px
		height 4em
		width 4em
		background-color color-yellow
		content ''
		display block
		margin 0 auto
	&.layout
		.block-grey
			width 100px
			height 100px
		.relative
			width 100%
			height 300px
	&.typeface
		.module
			padding 1.6em 1.8em
			p
				letter-spacing .3em
				font-size 1.1em
				& + p
					margin-top 1.3em
	&.alignment, &.transformtext
		.module
			p
				padding .7em
	&.stages
		margin-top 20px
	&.images .module > [class^='image-']
		& + span
			margin-left 9px
	&.labels
		.label + .label
			margin-left 8px
	&.loaders
		.module
			img + img
				margin-top 2em
			.hold
				align(both)
	.cards
		.card
			margin-top 12px
		& > .card:not(.fluid)
			margin-right 20px
	&.buttons
		.button
			margin .34em .6em .34em 0
	&.showing
		.view-source
			display block
			color color-primary
			opacity .5
.schemes
	display inline-flex
	flex-direction row
	align-items flex-start
	width 100%
	cf()
	&.dark
		.scheme
			color text-grey
	& + .schemes
		margin-top 20px
	.scheme
		justify-content flex-start
		padding 1em
		display flex
		flex 1 0 auto
		content ''
		color #fff
		flex-wrap wrap
		vertical-align center
		position relative
		align-items stretch
		width 180px
		p
			font-weight 500
			display block
			span(1/1)
		span
			margin 4px 0 0 0
			text-transform uppercase
		&:first-child
			border-radius border-radius-normal 0 0 border-radius-normal
		&:last-child
			border-radius 0 border-radius-normal border-radius-normal 0

.breakpoints .module
	p + p
			margin-top 8px

.module
	transition all 100ms cubic-bezier(0.16, 0.86, 0.44, 1)
	&.collapsed
		border 0
		box-shadow none !important
		padding 0
		margin 0
		background-color transparent
		.footer:not(.content)
			display none
	.footer
		span(1/1)
		pre
			background-color #fff
			margin 1em -1.3em -1.3em -1.3em
			border-radius 0 0 border-radius-normal border-radius-normal
			padding 0
			border-top 1px solid border-grey
			tab-size 4
			overflow auto
		code
			padding 1.3em
			margin 0
			background-color transparent

.sidebar.top, .subbar
	background-color white
	padding 24px 0 22px 0
	z-index 2300
	.logo, .sub
		float left
		display inline-block
		vertical-align top
		img
			max-height 24px
			absolute top -5px
			width 84px
		p
			color #fff
			margin 0
	.links
		float right
		display inline-block
		vertical-align top
		& > *
			display inline-block
			vertical-align top
		li
			& + li
				margin-left 2.4rem
			a
				color link-light
				font-weight 500
				cursor pointer
				&:hover
					color link-light-hover
					opacity 1
			&.active
				a
					color color-primary
					opacity 1

.subbar
	top 49px
	background-color color-ash
	padding 13px 0
	color #fff
	width 100%
	z-index 2200
	.sub
		font-size .9em

	.link
		font-size .9em
		margin 0
		padding 0
		line-height 1em
		float right
		a
			color #fff
			opacity .55
			&:hover
				opacity 1
			i
				margin-right 4px

aside.sidebar
	absolute right 170px
	float right
	cf()
	.fixed
		width 30%
		max-width 170px
		height 100%
		overflow auto
		.inner
			padding 108px 0 80px 0
			overflow auto

	h6
		margin 0 0 .5em 0
		font-weight 600
		font-size 1.14rem
	li
		padding .6em 0
		display block
		&.active
			a
				color color-primary
				opacity 1
				font-weight 700
		a
			color link-light
			font-weight 500
			&:hover
				color link-light-hover
				opacity 1

.sidebar
	& + .page
		padding-right 210px
		+below('m')
			padding-right 0

.outer-title
	margin-bottom 1.8rem
	border-bottom 1px solid border-grey
	padding-bottom 1.4rem
	h3
		font-weight 700
	p
		color color-light-grey
		font-size 1.06rem

footer.footer
	margin-top 2em
	span(1/1)
	absolute bottom left
	background-color #fff
	.madeby a
		&:hover
			color #e1476a
	.cindr
		color #e1476a
	& .inner
		padding 2em 0
		.links
			li a
				font-size .86rem

.wrap
	& + footer.footer
		position static
		margin 0

@keyframes puzzlebounce
	0%, 100%
		margin 0
	20%
		margin -20px 0 0 0
	80%
		margin 10px 0 0 0
