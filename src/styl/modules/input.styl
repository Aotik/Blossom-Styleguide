.input
  position relative
  font-size 0
  font-style normal
  input[disabled], &.disabled
    opacity .45
    cursor default
    pointer-events none
  input, textarea
    font-family font-family-standard
    font-size font-size-standard
    color text-default
    margin 0
    font-size font-size-standard
    max-width 100%
    line-height 1.125
    padding 0.75rem 1rem
    outline 0
    border-radius border-radius-normal
    text-align left
    border 0
    border 1px solid background-light-grey
    transition border-color 0.14s ease
    min-width 220px
    background-color #fff
    height 2.625em
    +placeholder()
      color text-default
    &:focus
      border-color color-primary
  textarea
    &:not([rows])
      min-height 8rem
      max-height 22rem
    line-height 1.2rem
    min-height 3rem
    width 100%
    resize vertical
  &.transparent
    input
      padding 0
      background-color transparent
      border 0
.action
  input
    border-radius border-radius-normal 0 0 border-radius-normal
    display inline-block
    vertical-align top
    & + .button
      border-radius 0 border-radius-normal border-radius-normal 0
      display inline-block
      vertical-align top
      font-size font-size-standard
  .button
    border-radius border-radius-normal 0 0 border-radius-normal
    display inline-block
    vertical-align top
    font-size font-size-standard
    & + input
      border-radius 0 border-radius-normal border-radius-normal 0
      display inline-block
      vertical-align top
